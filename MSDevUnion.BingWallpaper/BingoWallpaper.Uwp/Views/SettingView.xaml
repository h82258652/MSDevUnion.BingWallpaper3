<local:ViewBase x:Class="BingoWallpaper.Uwp.Views.SettingView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:converters="using:BingoWallpaper.Uwp.Converters"
                xmlns:core="using:Microsoft.Xaml.Interactions.Core"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
                xmlns:local="using:BingoWallpaper.Uwp.Views"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:media="using:Microsoft.Xaml.Interactions.Media"
                xmlns:uwp="using:FontAwesome.UWP"
                DataContext="{Binding Source={StaticResource Locator},
                                      Path=Setting}"
                mc:Ignorable="d">
    <Page.Resources>
        <Storyboard x:Name="CogStoryboard">
            <DoubleAnimation RepeatBehavior="Forever"
                             Storyboard.TargetName="TopCog"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0"
                             To="360"
                             Duration="0:0:12" />
            <DoubleAnimation RepeatBehavior="Forever"
                             Storyboard.TargetName="CenterCog"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="22.5"
                             To="-337.5"
                             Duration="0:0:12" />
            <DoubleAnimation RepeatBehavior="Forever"
                             Storyboard.TargetName="LeftCog"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             From="0"
                             To="360"
                             Duration="0:0:12" />
        </Storyboard>
        <converters:SaveLocationConverter x:Key="SaveLocationConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter" />
    </Page.Resources>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <interactivity:Interaction.Behaviors>
                <core:EventTriggerBehavior EventName="Loaded">
                    <media:ControlStoryboardAction ControlStoryboardOption="Play"
                                                   Storyboard="{StaticResource CogStoryboard}" />
                </core:EventTriggerBehavior>
            </interactivity:Interaction.Behaviors>
            <Grid.RenderTransform>
                <TranslateTransform X="-24"
                                    Y="-24" />
            </Grid.RenderTransform>
            <Viewbox Width="48"
                     Height="48">
                <uwp:FontAwesome x:Name="TopCog"
                                 Foreground="Green"
                                 Icon="Cog"
                                 RenderTransformOrigin="0.5,0.5">
                    <uwp:FontAwesome.RenderTransform>
                        <RotateTransform />
                    </uwp:FontAwesome.RenderTransform>
                </uwp:FontAwesome>
                <Viewbox.RenderTransform>
                    <TranslateTransform X="50" />
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Width="48"
                     Height="48">
                <uwp:FontAwesome x:Name="CenterCog"
                                 Foreground="Green"
                                 Icon="Cog"
                                 RenderTransformOrigin="0.5,0.5">
                    <uwp:FontAwesome.RenderTransform>
                        <RotateTransform Angle="22.5" />
                    </uwp:FontAwesome.RenderTransform>
                </uwp:FontAwesome>
                <Viewbox.RenderTransform>
                    <TranslateTransform X="35.36"
                                        Y="35.36" />
                </Viewbox.RenderTransform>
            </Viewbox>
            <Viewbox Width="48"
                     Height="48">
                <uwp:FontAwesome x:Name="LeftCog"
                                 Foreground="Green"
                                 Icon="Cog"
                                 RenderTransformOrigin="0.5,0.5">
                    <uwp:FontAwesome.RenderTransform>
                        <RotateTransform />
                    </uwp:FontAwesome.RenderTransform>
                </uwp:FontAwesome>
                <Viewbox.RenderTransform>
                    <TranslateTransform Y="50" />
                </Viewbox.RenderTransform>
            </Viewbox>
        </Grid>
        <StackPanel Margin="80"
                    Orientation="Vertical">
            <ComboBox x:Uid="/SettingView/SelectedSaveLocationComboBox"
                      ItemsSource="{Binding Path=SaveLocations}"
                      SelectedItem="{Binding Path=SelectedSaveLocation,
                                             Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource SaveLocationConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <ComboBox x:Uid="/SettingView/SelectedWallpaperSizeComboBox"
                      ItemsSource="{Binding Path=WallpaperSizes}"
                      SelectedItem="{Binding Path=SelectedWallpaperSize,
                                             Mode=TwoWay}" />
            <ComboBox x:Uid="/SettingView/SelectedAreaComboBox"
                      ItemsSource="{Binding Path=Areas}"
                      SelectedItem="{Binding Path=SelectedArea,
                                             Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <RelativePanel>
                            <Image x:Name="FlagImage"
                                   Height="24"
                                   RelativePanel.AlignLeftWithPanel="True"
                                   RelativePanel.AlignVerticalCenterWithPanel="True"
                                   Source="{Binding Converter={StaticResource StringFormatConverter},
                                                    ConverterParameter='/Assets/Images/Flags/{0}.png'}" />
                            <TextBlock Margin="4,0,0,0"
                                       RelativePanel.AlignVerticalCenterWith="FlagImage"
                                       RelativePanel.RightOf="FlagImage"
                                       Text="{Binding}" />
                        </RelativePanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
    </Grid>
</local:ViewBase>